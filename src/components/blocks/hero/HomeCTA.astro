---
// Home page CTA Section
// ------------
// Description: A centered call to action section that contains: a title, text, a user review snippet, a button and a image.

// Config
import { socialURLs } from '@/config/socialLinks'

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import ChipNotification from '../../ui/ChipNotification.astro'
import { Image } from 'astro:assets'
import Button from '../../ui/Button.astro'
import AvatarGroup from '../../ui/AvatarGroup.astro'

// Content
// - Hero Image
import heroImage from '@/assets/hero-astronauts.png'
// - Avatars
import user1 from '../../../assets/avatars/avatar-01.webp'
import user2 from '../../../assets/avatars/avatar-02.webp'
import user3 from '../../../assets/avatars/avatar-03.webp'
const avatars = [
	{ image: { src: user1.src, alt: 'user name' }, link: '/' },
	{ image: { src: user2.src, alt: 'user name' }, link: '/' },
	{ image: { src: user3.src, alt: 'user name' }, link: '/' }
]
---

<div class="flex min-h-screen flex-col justify-center">
	<Image
		src={heroImage}
		loading="lazy"
		quality="high"
		width="1920"
		alt="Astronautas trabajando en las estrellas"
		format="webp"
		class="mask-y-linear-70"
	/>
	<Section id="intro" padding="top" classes="bg-transparent">
		<Row>
			<Col span="2" />
			<Col span="8" align="center">
				<ChipNotification radius="rounded-full" classes="mb-6">
					<strong>100+</strong> Estudios Asociados
					<AvatarGroup avatars={avatars} radius="rounded-full" slot="button" />
				</ChipNotification>
				<h1>Aumente el <strong>rendimiento</strong> con los mejores</h1>

				<p class="pb-0 text-lg">Trabaja inteligente, no duro</p>
				<Button size="lg" link={socialURLs.whatsapp} targetBlank classes="animate-bounce"
					>Cont√°ctanos</Button
				>
			</Col>
			<Col span="2" />
			<Col span="2" />
			<Col span="2" />
		</Row>
	</Section>
</div>

<style>
	.mask-y-linear-70 {
		mask-image: linear-gradient(to bottom, transparent 0%, black 30%, black 70%, transparent 100%);
	}
</style>
