---
// Highlights Section
// ------------
// Description: A section with a multiple text and image rows.

// Components
// - UI
import TextImage from '../basic/TextImage.astro'

// Content
import trainings from '@/assets/features/vertical/capacitaciones.png'
import photographic from '@/assets/features/vertical/fotografia.png'
import sales from '@/assets/features/vertical/promos.png'
import support from '@/assets/features/vertical/soporte.png'
import profiles from '@/assets/features/vertical/perfiles.png'
import sigw from '@/assets/features/sigw.png'

type HighlightBlock = {
	title: string
	text: string
	image: any
	mobileImage?: any
	imageWidth: number
	imageHeight: number
	imagePosition: 'left' | 'right'
}

const processImgSize = (size: number): number => {
	return size / 10
}

const highlightBlocks: HighlightBlock[] = [
	{
		title: 'Capacitaciones <strong>personalizadas o grupales</strong>',
		text: 'Te ofrecemos 5 capacitaciones personalizadas o grupales al mes, adaptadas a tus necesidades y objetivos específicos. Desde estrategias de marketing hasta técnicas de monetización, nuestro equipo de expertos está aquí para ayudarte a alcanzar el éxito.',
		image: trainings,
		imageWidth: processImgSize(trainings.width),
		imageHeight: processImgSize(trainings.height),
		mobileImage: trainings,
		imagePosition: 'right'
	},
	{
		title: 'Creación de perfiles <strong>ilimitados</strong>',
		text: 'Nuestro equipo de expertos se encargara de la creación rápida y bajo los lineamientos de los camsites, asi podrás enfocarte en lo que realmente importa, tus modelos y su rápido crecimiento.',
		image: profiles,
		mobileImage: profiles,
		imageWidth: processImgSize(profiles.width),
		imageHeight: processImgSize(profiles.height),
		imagePosition: 'left'
	},
	{
		title: '<strong>Soporte</strong> exclusivo',
		text: 'Cuentas con canales de comunicación exclusivos para resolver tus dudas y consultas. Nuestro equipo de soporte está disponible para brindarte asistencia personalizada en menos de 2 minutos',
		image: support,
		mobileImage: support,
		imageWidth: processImgSize(support.width),
		imageHeight: processImgSize(support.height),
		imagePosition: 'right'
	},
	{
		title: 'Acceso a nuestra plataforma administrativa <strong>SIGW</strong>',
		text: 'Tendrás acceso a nuestra plataforma de gestión administrativa, donde podrás gestionar tus modelos, realizar seguimiento de su rendimiento y acceder a informes detallados sobre su actividad y ganancias.',
		image: sigw,
		mobileImage: sigw,
		imageWidth: processImgSize(sigw.width),
		imageHeight: processImgSize(sigw.height),
		imagePosition: 'left'
	},
	{
		title: '<strong>Descuentos</strong> en nuestros eventos',
		text: 'Contaras con un descuento del 10% en nuestros eventos, donde podrás aprender de los mejores y compartir experiencias con otros modelos y estudios.',
		image: sales,
		mobileImage: sales,
		imageWidth: processImgSize(sales.width),
		imageHeight: processImgSize(sales.height),
		imagePosition: 'right'
	},
	{
		title: 'Fotografía <strong>profesional</strong>',
		text: 'Puedes incluir este servicio a tu plan y tus modelos podrán acceder a sesiones de fotos profesionales cada mes para mejorar su perfil y atraer más clientes. Nuestro equipo de fotografía se encargará de capturar la esencia de cada modelo y resaltar su belleza única.',
		image: photographic,
		mobileImage: photographic,
		imageWidth: processImgSize(photographic.width),
		imageHeight: processImgSize(photographic.height),
		imagePosition: 'left'
	}
]
---

<div class="flex flex-col items-center justify-center">
	{
		highlightBlocks.map((highlight, key) => (
			<TextImage
				id={`highlight-${key}`}
				title={highlight.title}
				text={highlight.text}
				image={highlight.image}
				imageWidth={highlight.imageWidth}
				imageHeight={highlight.imageHeight}
				mobileImage={highlight.mobileImage}
				imagePosition={highlight.imagePosition}
				classes={key === 0 ? '!pb-0' : key === highlightBlocks.length - 1 ? '!pt-0' : '!py-0'}
			/>
		))
	}
</div>
